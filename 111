<!DOCTYPE html>
<html>
<head>
    <title>Grade Evaluation</title>
</head>
<body>

<h2>Grade Evaluation Form</h2>

<form action="grade_result.php" method="POST">

    Name:
    <input type="text" name="name" required><br><br>

    Program:
    <input type="text" name="program" required><br><br>

    Student Number:
    <input type="text" name="studnum" required><br><br>

    Grade:
    <input type="number" name="grade" required><br><br>

    <input type="submit" value="ENTER">

</form>

</body>
</html>






<!DOCTYPE html>
<html>
<body>

<?php
$name    = $_POST['name'];
$program = $_POST['program'];
$studnum = $_POST['studnum'];
$grade   = $_POST['grade'];

$point = "";
$remarks = "";

if ($grade >= 98 && $grade <= 100) {
    $point = "1.0";
    $remarks = "Excellent";
}
else if ($grade >= 95 && $grade <= 97) {
    $point = "1.25";
    $remarks = "Perfect";
}
else if ($grade >= 90 && $grade <= 94) {
    $point = "1.75";
    $remarks = "Very Good";
}
else if ($grade >= 85 && $grade <= 89) {
    $point = "2.0";
    $remarks = "Good";
}
else if ($grade >= 75 && $grade <= 84) {
    $point = "3.0";
    $remarks = "Passed";
}
else if ($grade >= 50 && $grade <= 74) {
    $point = "5.0";
    $remarks = "Failed";
}
else {
    $point = "Undefined";
    $remarks = "You are not yet enrolled.";
}

echo "Name: $name<br>";
echo "Program: $program<br>";
echo "Student number: $studnum<br>";
echo "Grade: $grade<br><br>";

echo "Equivalent: $point<br>";
echo "Remarks: $remarks<br>";
?>

</body>
</html>
