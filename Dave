<?php
// Check if submitted
if ($_SERVER["REQUEST_METHOD"] == "POST") {

    $fname = $_POST['fname'];
    $sname = $_POST['sname'];
    $pass  = $_POST['pass'];

    echo "Name is $fname <br>";
    echo "Last name is $sname <br>";
    echo "Your password is $pass <br><br>";
}
?>

<form action="" method="POST">

    Firstname:
    <input type="text" name="fname" value="Lyshan"><br><br>

    Lastname:
    <input type="text" name="sname" value="Dave"><br><br>

    Secret Pass:
    <input type="password" name="pass" value="1234"><br><br>

    <input type="submit" value="Submit">

</form>

